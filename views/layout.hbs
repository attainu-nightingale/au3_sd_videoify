<body>
    <header class="fixed-top">
        <nav id="navbar1" class="navbar justify-content-between">

            <a class="navbar-brand" href="/home">
                <img src="../webtubelogo.png" width="50" height="40" class="d-inline-block" alt="">
                <h3 class="d-inline align-middle text-white ml-3">webTube</h3>
            </a>

            <form class="form-inline">
                <div class="input-group">
                    <input id="navBarSearchForm" name="wtb-search" class="form-control" type="search"
                        placeholder="Search here..." aria-label="Search here...">
                    <div class="input-group-append">
                        <button type="button" class="btn" id="scrhbtn"><img id="searchicon" src="../searchicon.png"
                                height="25" width="25"></button>
                    </div>
                </div>
            </form>

            <a href="/profile">
                <img src="{{profilepic}}" width="45" height="45" class="d-inline-block" alt="">
            </a>

        </nav>

        <nav id="navbar2" class="navbar justify-content-between ">
            <form class="form-inline">
                <a href="/home"><button class="btn catbtn" type="button">HOME</button></a>
                <a href="/trending"><button class="btn ml-3 trendbtn" type="button">TRENDING</button></a>
                <a href="/movies"><button class="btn ml-3 catbtn" type="button" id="movie">MOVIES</button></a>
            </form>
            <a href="/authrouter/logout" class="badge badge-danger">Sign out</a>
        </nav>

    </header>
    <div style="margin-top:115px;"></div>
    <div id="bodyContent" class="">
        {{{body}}}
    </div>
    <script src="../layout.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
